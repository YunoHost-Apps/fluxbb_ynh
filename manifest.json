{
    "name": "FluxBB",
    "id": "fluxbb",
    "packaging_format": 1,
    "description": {
        "en": "FluxBB is fast, light, user-friendly forum software for your website."
    },
    "version": "1.0",
    "url": "https://example.com",
    "license": "free",
    "maintainer": {
        "name": "abld",
        "email": "abld@abld.info",
        "url": "https://abld.info"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Fluxbb",
                    "fr": "Choisissez un nom de domaine pour Fluxbb"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Fluxbb",
                    "fr": "Choisissez un chemin pour Fluxbb"
                },
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
} 
